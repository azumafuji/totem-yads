#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/outputs.h>
#include <dt-bindings/zmk/pointing.h>

#define Base        0
#define Media       1
#define Nav         2
#define Mouse       3
#define Sym         4
#define Num         5
#define Fun         6
#define Button      7
#define Game        8
#define Gameplus    9

&mt {
    quick-tap-ms = <100>;
    flavor = "tap-preferred";
    tapping-term-ms = <170>;
};

&lt {
    tapping-term-ms = <240>;
    flavor = "balanced";
    quick-tap-ms = <150>;
};


/ {
    behaviors {
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <240>;
            quick-tap-ms = <150>;
            bindings = <&kp>, <&kp>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        Base {
            display-name = "Base";
            bindings = <
            &kp Q       &kp W       &kp E         &kp R         &kp T              &kp Y         &kp U        &kp I        &kp O       &kp P
            &hm LGUI A  &hm LALT S  &hm LCTRL D   &hm LSHIFT F  &kp G              &kp H         &hm RSHFT J  &hm RCTRL K  &hm LALT L  &hm RGUI SEMICOLON
&kp ESCAPE  &kp Z       &kp X       &kp C         &kp V         &kp B              &kp N         &kp M        &kp COMMA    &kp DOT     &lt 7 SLASH         &kp SINGLE_QUOTE
                                    &lt 6 DELETE  &lt 1 SPACE   &lt 2 BACKSPACE    &lt 3 RETURN  &lt 4 SPACE  &lt 5 TAB
            >;
        };

        Nav {
            display-name = "Nav";
            bindings = <
        &trans        &trans    &trans     &trans      &kp INSERT    &kp PAGE_UP  &kp PAGE_DOWN  &trans          &trans     &trans
        &kp LEFT_GUI  &kp LALT  &kp LCTRL  &kp LSHIFT  &kp DELETE    &trans       &kp LEFT       &kp UP_ARROW    &kp RIGHT  &trans
&trans  &trans        &trans    &trans     &trans      &trans        &kp HOME     &kp END        &kp DOWN_ARROW  &trans     &trans  &trans
                                &trans     &trans      &trans        &trans       &trans         &trans
            >;
        };

        Mouse {
            display-name = "Mouse";
            bindings = <
        &trans  &mkp LCLK       &mkp MCLK       &mkp RCLK        &msc SCRL_UP       &msc SCRL_UP    &mkp LCLK        &mkp MCLK       &mkp RCLK        &trans
        &trans  &mmv MOVE_LEFT  &mmv MOVE_UP    &mmv MOVE_RIGHT  &msc SCRL_DOWN     &msc SCRL_DOWN  &mmv MOVE_LEFT   &mmv MOVE_UP    &mmv MOVE_RIGHT  &trans
&trans  &trans  &trans          &mmv MOVE_DOWN  &msc SCRL_LEFT   &msc SCRL_RIGHT    &msc SCRL_LEFT  &msc SCRL_RIGHT  &mmv MOVE_DOWN  &trans           &trans  &trans
                                &trans          &trans           &trans             &trans          &trans           &trans
            >;
        };

        Sym {
            display-name = "Sym";
            bindings = <
        &kp GRAVE        &kp AMPERSAND  &kp STAR     &kp EQUAL  &kp MINUS        &kp LEFT_BRACE        &kp RIGHT_BRACE               &trans     &trans    &trans
        &kp NON_US_HASH  &kp DOLLAR     &kp PERCENT  &kp CARET  &kp BACKSLASH    &kp LEFT_PARENTHESIS  &hm RSHIFT RIGHT_PARENTHESIS  &kp RCTRL  &kp RALT  &kp RGUI
&trans  &trans           &kp EXCL       &kp AT       &kp HASH   &kp SEMI         &kp LEFT_BRACKET      &kp RIGHT_BRACKET             &trans     &trans    &trans    &trans
                                        &trans       &trans     &trans           &trans                &trans                        &trans
            >;
        };

        Num {
            display-name = "Num";
            bindings = <
        &trans           &kp KP_NUMBER_7  &kp KP_NUMBER_8  &kp KP_NUMBER_9  &kp KP_DIVIDE      &kp KP_NUMLOCK  &trans      &trans     &trans    &trans
        &kp KP_PLUS      &kp KP_NUMBER_4  &kp KP_NUMBER_5  &kp KP_NUMBER_6  &kp KP_ASTERISK    &trans          &kp RSHIFT  &kp RCTRL  &kp RALT  &kp RGUI
&trans  &kp KP_SUBTRACT  &kp KP_NUMBER_1  &kp KP_NUMBER_2  &kp KP_NUMBER_3  &kp KP_DOT         &trans          &trans      &trans     &trans    &trans    &trans
                                          &kp KP_NUMBER_0  &trans           &kp EQUAL          &kp KP_ENTER    &trans      &trans
            >;
        };

        Fun {
            display-name = "Fun";
            bindings = <
        &trans           &kp F7  &kp F8  &kp F9  &kp F12    &kp CAPSLOCK     &trans      &trans     &trans    &trans
        &kp SCROLLLOCK   &kp F4  &kp F5  &kp F6  &kp F11    &kp PRINTSCREEN  &kp RSHIFT  &kp RCTRL  &kp RALT  &kp RGUI
&trans  &kp PAUSE_BREAK  &kp F1  &kp F2  &kp F3  &kp F10    &kp C_MENU       &trans      &trans     &trans    &trans    &trans
                                 &trans  &trans  &trans     &trans           &trans      &trans
            >;
        };

        Media {
            display-name = "Media";
            bindings = <
        &trans    &trans    &trans     &trans      &kp F23    &kp C_BRIGHTNESS_INC  &trans            &trans             &trans           &trans
        &kp LGUI  &kp LALT  &kp LCTRL  &kp LSHIFT  &kp F23    &kp C_BRIGHTNESS_DEC  &kp C_PREVIOUS    &kp C_VOLUME_DOWN  &kp C_VOLUME_UP  &kp C_NEXT
&trans  &trans    &trans    &trans     &trans      &kp F22    &trans                &kp C_MUTE        &trans             &trans           &trans      &trans
                            &trans     &trans      &tog 8     &kp C_STOP            &kp C_PLAY_PAUSE  &kp C_PLAY
            >;
        };

Button {
            display-name = "Button";
            bindings = <

        &bt BT_CLR  &trans    &trans     &out OUT_TOG  &bt BT_SEL 0    &studio_unlock  &trans      &trans     &bootloader  &trans
        &kp LGUI    &kp LALT  &kp LCTRL  &kp LSHIFT    &bt BT_SEL 1    &trans          &kp RSHIFT  &kp RCTRL  &kp RALT     &kp RGUI
&trans  &trans      &trans    &trans     &trans        &bt BT_SEL 2    &trans          &trans      &trans     &trans       &trans    &trans
                              &trans     &trans        &trans          &trans          &trans      &trans
            >;
        };

        Game {
            display-name = "Game";
            bindings = <
            &kp TAB         &kp Q  &kp X     &kp E      &kp R              &trans  &trans  &trans  &trans  &trans
            &kp LEFT_SHIFT  &kp A  &kp W     &kp D      &kp F              &trans  &trans  &trans  &trans  &trans
&kp ESCAPE  &kp LCTRL       &kp Z  &kp S     &kp C      &kp V              &trans  &trans  &trans  &trans  &trans  &trans
                                   &kp LALT  &kp SPACE  &lt 9 BACKSPACE    &trans  &trans  &trans
            >;
        };

        Gameplus {
            display-name = "Gameplus";
            bindings = <
        &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &kp NUMBER_4  &kp NUMBER_5    &trans  &trans  &trans  &trans  &trans
        &kp G         &trans        &trans        &trans        &kp T           &trans  &trans  &trans  &trans  &trans
&trans  &trans        &trans        &trans        &trans        &kp B           &trans  &trans  &trans  &trans  &trans  &trans
                                    &trans        &trans        &none           &tog 8  &trans  &trans
            >;
        };
    };
};
